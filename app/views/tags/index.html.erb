<div class="container py-5">
  <div class="card p-4">
    <h1 class="text-center text-white mb-4">Tags</h1>
    <table class="table table-hover table-bordered rounded-4 overflow-hidden payments-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tags.each do |tag| %>
          <tr>
            <td><%= link_to tag.name, tag_path(tag) %></td>
            <td><%= tag.description %></td>
            <td>
              <% if current_user&.admin? %>
                <%= link_to 'Edit', edit_tag_path(tag), class: 'btn btn-sm btn-primary' %>
                <%= link_to 'Delete', tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-between align-items-center mt-3">
      <%= link_to 'Back to Movies', movies_path, class: 'btn btn-secondary' %>
      <% if current_user&.admin? %>
        <%= link_to 'New Tag', new_tag_path, class: 'btn btn-success' %>
      <% end %>
    </div>
    <div class="d-flex justify-content-center mt-4">
      <%= paginate @tags %>
    </div>
  </div>
</div>
