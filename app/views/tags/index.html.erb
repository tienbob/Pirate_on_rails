<% content_for :head do %>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
<% end %>
<%= stylesheet_link_tag 'tags_index', media: 'all' %>

<script>
  document.body.classList.add('bg-tags');
</script>

<div class="tags-admin-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-xl-10">
        <div class="admin-dashboard-card">
          <div class="admin-header">
            <h1 class="admin-title">Tags Management</h1>
            <p class="admin-subtitle">Admin Dashboard â€¢ Genre & Category Control</p>
          </div>
          
          <% if @tags.any? %>
            <div class="tags-grid">
              <% @tags.each do |tag| %>
                <div class="tag-admin-card">
                  <%= link_to tag.name, tag_path(tag.id), class: 'tag-name d-block' %>
                  <div class="tag-description">
                    <%= tag_description_preview(tag) %>
                  </div>
                  <%= admin_tag_actions(tag) %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="empty-state">
              <h3>No Tags Yet</h3>
              <p>Start building your film categories by creating your first tag.</p>
            </div>
          <% end %>
          
          <div class="admin-footer">
            <div class="admin-footer-actions">
              <%= link_to 'Back to Movies', movies_path, class: 'admin-btn-large admin-btn-secondary' %>
              <% if current_user&.admin? %>
                <%= link_to 'Create New Tag', new_tag_path, class: 'admin-btn-large admin-btn-success' %>
              <% end %>
            </div>
            
            <% if respond_to?(:paginate) && @tags.respond_to?(:current_page) %>
              <div class="d-flex justify-content-center mt-4">
                <%= paginate @tags %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
