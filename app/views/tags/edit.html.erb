
<link href="https://fonts.googleapis.com/css2?family=Mochiy+Pop+One&display=swap" rel="stylesheet">

<script>
  document.body.classList.add('bg-tags');
</script>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card p-4">
        <h1 class="text-center text-white mb-4">Edit Tag</h1>
        <%= form_with(model: @tag, local: true) do |form| %>
          <div class="mb-3">
            <%= form.label :name, class: 'form-label' %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>
          <div class="mb-3">
            <%= form.label :description, class: 'form-label' %>
            <%= form.text_area :description, class: 'form-control' %>
          </div>
          <div class="d-grid gap-2">
            <%= form.submit 'Update Tag', class: 'btn btn-primary' %>
          </div>
        <% end %>
        <%= link_to 'Back', tags_path, class: 'btn btn-secondary mt-3' %>
      </div>
    </div>
  </div>
</div>
