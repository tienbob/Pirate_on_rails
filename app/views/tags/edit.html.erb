<style>
  body.bg-tags {
    background: linear-gradient(135deg, #f06292 0%, #ba68c8 50%, #64b5f6 100%);
    min-height: 100vh;
    font-family: 'Mochiy Pop One', 'Segoe UI', 'Arial', sans-serif;
    color: #fff;
  }
  .card {
    background: rgba(255, 255, 255, 0.1);
    border: none;
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
  }
  .form-label {
    color: rgba(255, 255, 255, 0.9);
  }
  .form-control, .btn {
    font-family: 'Mochiy Pop One', sans-serif;
  }
  .btn-primary {
    background: linear-gradient(90deg, #ff8c00 0%, #ff0080 100%);
    border: none;
    color: #fff;
  }
  .btn-primary:hover {
    background: linear-gradient(90deg, #ff0080 0%, #ff8c00 100%);
    color: #fff;
  }
</style>

<link href="https://fonts.googleapis.com/css2?family=Mochiy+Pop+One&display=swap" rel="stylesheet">

<script>
  document.body.classList.add('bg-tags');
</script>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card p-4">
        <h1 class="text-center text-white mb-4">Edit Tag</h1>
        <%= form_with(model: @tag, local: true) do |form| %>
          <div class="mb-3">
            <%= form.label :name, class: 'form-label' %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>
          <div class="mb-3">
            <%= form.label :description, class: 'form-label' %>
            <%= form.text_area :description, class: 'form-control' %>
          </div>
          <div class="d-grid gap-2">
            <%= form.submit 'Update Tag', class: 'btn btn-primary' %>
          </div>
        <% end %>
        <%= link_to 'Back', tags_path, class: 'btn btn-secondary mt-3' %>
      </div>
    </div>
  </div>
</div>
