
<%= stylesheet_link_tag 'cinema_auth', media: 'all' %>

<!-- Ensure Font Awesome loads for auth pages -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<script>
  document.body.classList.add('bg-signup');
</script>

<div class="container py-2"> <!-- Further reduced padding -->
  <div class="row justify-content-center" style="min-height: 100vh; display: flex; align-items: center;">
    <div class="col-md-7 col-lg-5">
      <div class="auth-card"> <!-- Removed p-5 since we handle padding in CSS now -->
        <div class="auth-header">
          <div class="auth-logo">
            <img src="/icon.png" alt="Pirate On Rails">
          </div>
          <h2 class="auth-title">Create Your Account</h2>
          <p class="auth-subtitle">Join the adventure and start streaming!</p>
        </div>

        <%= form_with(model: resource, url: registration_path(resource_name), 
            data: { turbo: true }, 
            html: { class: "auth-form needs-validation", data: { controller: "form-validation" } }) do |f| %>
          
          <% if resource.errors.any? %>
            <div class="auth-error">
              <div class="auth-error-title">
                <i class="fas fa-exclamation-triangle"></i>
                <%= pluralize(resource.errors.count, "error") %> prohibited this account from being saved:
              </div>
              <ul class="auth-error-list">
                <% resource.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="auth-form-group">
            <%= f.label :name, class: "auth-form-label" do %>
              <i class="fas fa-user"></i>Full Name
            <% end %>
            <%= f.text_field :name, 
                autofocus: true, 
                class: "auth-form-input", 
                placeholder: "Enter your full name", 
                required: true, 
                'data-form-validation-target': 'input' %>
          </div>

          <div class="auth-form-group">
            <%= f.label :email, class: "auth-form-label" do %>
              <i class="fas fa-envelope"></i>Email Address
            <% end %>
            <%= f.email_field :email, 
                class: "auth-form-input", 
                placeholder: "you@example.com", 
                required: true, 
                'data-form-validation-target': 'email input' %>
          </div>

          <div class="auth-form-group">
            <%= f.label :password, class: "auth-form-label" do %>
              <i class="fas fa-lock"></i>Password
            <% end %>
            <%= f.password_field :password, 
                autocomplete: "new-password", 
                class: "auth-form-input", 
                placeholder: "Create a strong password", 
                required: true, 
                'data-form-validation-target': 'password input' %>
            <div class="password-strength">
              <div class="password-strength-bar" data-strength=""></div>
            </div>
          </div>

          <div class="auth-form-group">
            <%= f.label :password_confirmation, class: "auth-form-label" do %>
              <i class="fas fa-check-circle"></i>Confirm Password
            <% end %>
            <%= f.password_field :password_confirmation, 
                autocomplete: "new-password", 
                class: "auth-form-input", 
                placeholder: "Confirm your password", 
                required: true, 
                'data-form-validation-target': 'passwordConfirmation input' %>
          </div>

          <div class="d-grid gap-2 mt-4">
            <%= f.submit "Create Account", class: "auth-submit-btn" %>
          </div>
        <% end %>

        <div class="auth-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
