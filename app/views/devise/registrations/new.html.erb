<script>
  document.body.classList.add('bg-signup');
</script>

<div class="container py-5">
  <div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-7 col-lg-5">
      <div class="card border-0 shadow-lg rounded-4">
        <div class="card-body p-5">
          <div class="text-center mb-4">
            <img src="/icon.png" alt="Pirate On Rails" width="64" height="64" class="mb-2">
            <h2 class="card-title fw-bold mb-1" style="letter-spacing:1px;">Create Your Account</h2>
            <p class="text-muted">Join Pirate On Rails and start watching!</p>
          </div>
          <%= form_with(model: resource, url: registration_path(resource_name), data: { turbo: true }, html: { class: "needs-validation" }) do |f| %>
            <div class="mb-3">
              <%= f.label :name, class: "form-label fw-semibold" %>
              <%= f.text_field :name, autofocus: true, class: "form-control form-control-lg rounded-3", placeholder: "Your Name" %>
            </div>
            <div class="mb-3">
              <%= f.label :email, class: "form-label fw-semibold" %>
              <%= f.email_field :email, class: "form-control form-control-lg rounded-3", placeholder: "you@email.com" %>
            </div>
            <div class="mb-3">
              <%= f.label :password, class: "form-label fw-semibold" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg rounded-3", placeholder: "Password" %>
            </div>
            <div class="mb-3">
              <%= f.label :password_confirmation, class: "form-label fw-semibold" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg rounded-3", placeholder: "Confirm Password" %>
            </div>
            <div class="d-grid gap-2 mt-4">
              <%= f.submit "Sign up", class: "btn btn-gradient btn-lg fw-bold" %>
            </div>
          <% end %>
          <div class="mt-4 text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

