<%- if controller_name != 'sessions' %>
  <div class="mb-3">
    <%= link_to new_session_path(resource_name), class: "auth-link primary" do %>
      <i class="fas fa-sign-in-alt"></i>Already have an account? Sign in
    <% end %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mb-3">
    <%= link_to new_registration_path(resource_name), class: "auth-link primary" do %>
      <i class="fas fa-user-plus"></i>Don't have an account? Sign up
    <% end %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <div class="mb-3">
    <%= link_to new_password_path(resource_name), class: "auth-link danger" do %>
      <i class="fas fa-key"></i>Forgot your password?
    <% end %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="mb-3">
    <%= link_to new_confirmation_path(resource_name), class: "auth-link" do %>
      <i class="fas fa-envelope-open"></i>Didn't receive confirmation instructions?
    <% end %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="mb-3">
    <%= link_to new_unlock_path(resource_name), class: "auth-link" do %>
      <i class="fas fa-unlock"></i>Didn't receive unlock instructions?
    <% end %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="mb-3">
      <%= link_to omniauth_authorize_path(resource_name, provider), 
          method: :post, 
          class: "auth-link",
          data: { turbo: false } do %>
        <i class="fab fa-<%= provider %>"></i>Sign in with <%= OmniAuth::Utils.camelize(provider) %>
      <% end %>
    </div>
  <% end %>
<% end %>
