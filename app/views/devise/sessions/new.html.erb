
<%= stylesheet_link_tag 'cinema_auth', media: 'all' %>

<script>
  document.body.classList.add('bg-login');
</script>

<div class="container py-5">
  <div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-7 col-lg-5">
      <div class="auth-card p-5">
        <div class="auth-header">
          <div class="auth-logo">
            <img src="/icon.png" alt="Pirate On Rails">
          </div>
          <h2 class="auth-title">Welcome Back</h2>
          <p class="auth-subtitle">Sign in to continue your adventure</p>
        </div>

        <%= form_with(model: resource, url: session_path(resource_name), 
            data: { turbo: true }, 
            html: { class: "auth-form needs-validation", data: { controller: "form-validation" } }) do |f| %>
          
          <% if alert %>
            <div class="auth-error">
              <div class="auth-error-title">
                <i class="fas fa-exclamation-triangle"></i>
                Sign In Error
              </div>
              <%= alert %>
            </div>
          <% end %>

          <div class="auth-form-group">
            <%= f.label :email, class: "auth-form-label" do %>
              <i class="fas fa-envelope"></i>Email Address
            <% end %>
            <%= f.email_field :email, 
                autofocus: true, 
                class: "auth-form-input", 
                placeholder: "you@example.com", 
                required: true, 
                'data-form-validation-target': 'email input' %>
          </div>

          <div class="auth-form-group">
            <%= f.label :password, class: "auth-form-label" do %>
              <i class="fas fa-lock"></i>Password
            <% end %>
            <%= f.password_field :password, 
                autocomplete: "current-password", 
                class: "auth-form-input", 
                placeholder: "Enter your password", 
                required: true, 
                'data-form-validation-target': 'password input' %>
          </div>

          <div class="auth-checkbox-group">
            <%= f.check_box :remember_me, class: "auth-checkbox", id: "remember_me" %>
            <%= f.label :remember_me, class: "auth-checkbox-label", for: "remember_me" do %>
              Keep me signed in
            <% end %>
          </div>

          <div class="d-grid gap-2 mt-4">
            <%= f.submit "Sign In", class: "auth-submit-btn" %>
          </div>
        <% end %>

        <div class="auth-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
