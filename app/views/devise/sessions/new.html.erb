
<style>
  body.bg-login {
    background: linear-gradient(135deg, #2575fc 0%, #6a11cb 100%);
    min-height: 100vh;
  }
</style>

<script>
  document.body.classList.add('bg-login');
</script>

<div class="container py-5">
  <div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-7 col-lg-5">
      <div class="card border-0 shadow-lg rounded-4">
        <div class="card-body p-5">
          <div class="text-center mb-4">
            <img src="/icon.png" alt="Pirate On Rails" width="64" height="64" class="mb-2">
            <h2 class="card-title fw-bold mb-1" style="letter-spacing:1px;">Welcome Back</h2>
            <p class="text-muted">Log in to continue watching!</p>
          </div>
          <%= form_with(model: resource, url: session_path(resource_name), data: { turbo: true }, html: { class: "needs-validation" }) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label fw-semibold" %>
              <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg rounded-3", placeholder: "you@email.com" %>
            </div>
            <div class="mb-3">
              <%= f.label :password, class: "form-label fw-semibold" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg rounded-3", placeholder: "Password" %>
            </div>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
            <div class="d-grid gap-2 mt-4">
              <%= f.submit "Log in", class: "btn btn-gradient btn-lg fw-bold" %>
            </div>
          <% end %>
          <div class="mt-4 text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .btn-gradient {
    background: linear-gradient(90deg, #2575fc 0%, #6a11cb 100%);
    color: #fff;
    border: none;
    box-shadow: 0 2px 8px rgba(106,17,203,0.15);
    transition: background 0.3s;
  }
  .btn-gradient:hover {
    background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);
    color: #fff;
  }
</style>
