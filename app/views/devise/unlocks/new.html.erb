<%= stylesheet_link_tag 'cinema_auth', media: 'all' %>

<script>
  document.body.classList.add('bg-login');
</script>

<div class="container py-5">
  <div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-7 col-lg-5">
      <div class="auth-card p-5">
        <div class="auth-header">
          <div class="auth-logo">
            <img src="/icon.png" alt="Pirate On Rails">
          </div>
          <h2 class="auth-title">Account Unlock</h2>
          <p class="auth-subtitle">Resend unlock instructions to your email</p>
        </div>

        <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), 
            html: { method: :post, class: "auth-form" }) do |f| %>
          
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="auth-form-group">
            <%= f.label :email, class: "auth-form-label" do %>
              <i class="fas fa-envelope"></i>Email Address
            <% end %>
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                class: "auth-form-input", 
                placeholder: "Enter your email address" %>
          </div>

          <div class="d-grid gap-2 mt-4">
            <%= f.submit "Resend Unlock Instructions", class: "auth-submit-btn" %>
          </div>
        <% end %>

        <div class="auth-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
