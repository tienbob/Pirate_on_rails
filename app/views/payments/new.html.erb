<div class="container py-5">
  <h1 class="mb-4 text-center">New Payment</h1>
  <%= form_with(model: @payment, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :amount, class: "form-label" %>
      <%= form.number_field :amount, step: 0.01, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :currency, class: "form-label" %>
      <%= form.text_field :currency, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :status, class: "form-label" %>
      <%= form.select :status, ["pending", "completed", "failed"], {}, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :user_id, "User", class: "form-label" %>
      <%= form.collection_select :user_id, User.all, :id, :name, {prompt: "Select User"}, class: "form-control" %>
    </div>
    <div class="d-flex justify-content-between">
      <%= form.submit "Create Payment", class: "btn btn-gradient" %>
      <%= link_to "Back", payments_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
