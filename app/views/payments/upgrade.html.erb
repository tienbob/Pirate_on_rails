<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow-lg rounded-4 p-4">
        <h2 class="mb-4 text-center">Upgrade to Pro</h2>
        <p class="text-center mb-4">Unlock all features by upgrading your account to Pro!</p>
        <form method="post" action="<%= create_checkout_session_payments_path %>" data-turbo="false">
          <div class="mb-3">
            <label class="form-label">Amount</label>
            <input type="number" class="form-control" value="9.99" readonly>
          </div>
          <input type="hidden" name="user_id" value="<%= current_user.id %>">
          <input type="hidden" name="price" value="<%= ENV['STRIPE_PRICE_ID'] %>">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="d-grid gap-2">
            <button class="btn btn-gradient btn-lg">Pay & Upgrade</button>
          </div>
        </form>
        <div class="mt-3 text-center">
          <%= link_to 'Back', movies_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://js.stripe.com/v3/"></script>


