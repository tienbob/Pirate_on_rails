
<header class="cinema-header">
  <div class="container">
    <nav class="navbar navbar-expand-lg">
      <a class="cinema-brand" href="/">
        <%= image_tag "animate.png", class: "cinema-brand-icon", style: "width:35px;height:35px;object-fit:contain;" %>
      </a>
      
      <button class="cinema-toggler navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="cinema-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto d-flex align-items-center gap-2">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Series', series_index_path, class: 'cinema-nav-link' %>
            </li>
          <% end %>
          <% if user_signed_in? && current_user.admin? %>
            <li class="nav-item">
              <%= link_to 'Users', users_path, class: 'cinema-nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Payments', payments_path, class: 'cinema-nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Tags', tags_path, class: 'cinema-nav-link' %>
            </li>
          <% elsif user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Profile', user_path(current_user), class: 'cinema-nav-link' %>
            </li>
          <% end %>
          <% if user_signed_in? && !current_user.admin? && !current_user.pro? %>
            <li class="nav-item">
              <%= link_to 'Upgrade to Pro', upgrade_payment_path, class: 'cinema-nav-link upgrade-btn' %>
            </li>
          <% end %>
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'cinema-nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Login', new_user_session_path, class: 'cinema-nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>
