<header class="navbar navbar-expand-lg navbar-dark bg-gradient shadow-sm py-2">
  <div class="container">
    <a class="navbar-brand fw-bold" href="/">
      <%= image_tag "animate.png", style: "max-height: 2.5rem; height: 2.5rem; width: auto; vertical-align: middle;" %>
      Pirate On Rails
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <%= link_to 'Series', series_index_path, class: 'nav-link' %>
        </li>
        <% if user_signed_in? && current_user.admin? %>
          <li class="nav-item">
            <%= link_to 'Users', users_path, class: 'nav-link' %>
          </li>
        <% elsif user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'Profile', user_path(current_user), class: 'nav-link' %>
          </li>
        <% end %>
        <li class="nav-item">
          <%= link_to 'Tags', tags_path, class: 'nav-link' %>
        </li>
        <% if user_signed_in? && !current_user.admin? && !current_user.pro? %>
          <li class="nav-item">
            <%= link_to 'Upgrade to Pro', upgrade_payment_path, class: 'nav-link text-warning' %>
          </li>
        <% end %>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Login', new_user_session_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
