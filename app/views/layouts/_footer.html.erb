
<footer class="cinema-footer">
  <div class="container text-center">
    <div class="cinema-footer-brand">
      <%= image_tag "animate.png", class: "cinema-footer-icon", style: "width:35px;height:35px;object-fit:contain;" %>
    </div>
    
    <div class="cinema-footer-copyright">
      &copy; <%= Time.current.year %> Pirate On Rails. All rights reserved.
    </div>
    
    <div class="cinema-footer-links">
      <a href="https://github.com/tienbob/Pirate_on_rails" class="cinema-footer-link" target="_blank">
        <i class="fab fa-github me-1"></i>GitHub
      </a>
      <%= link_to about_path, class: "cinema-footer-link" do %>
        <i class="fas fa-info-circle me-1"></i>About
      <% end %>
      <%= link_to contact_path, class: "cinema-footer-link" do %>
        <i class="fas fa-envelope me-1"></i>Contact
      <% end %>
    </div>
    
  </div>
</footer>
