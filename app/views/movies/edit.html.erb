<%# Only accessible by admin, so no need for extra checks here %>
<%= form_with(model: @movie, local: true) do |form| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :release_date %>
    <%= form.date_field :release_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :is_pro, "Pro Episode?" %>
    <%= form.check_box :is_pro %>
  </div>

  <div class="mb-3">
    <%= form.submit "Update Episode", class: "btn btn-primary" %>
    <%= link_to 'Back', series_path(@movie.series), class: 'btn btn-secondary ms-2' %>
  </div>
<% end %>

<div class="mb-3">
  <%= button_to 'Delete Episode', movie_path(@movie), method: :delete, data: { confirm: 'Are you sure you want to delete this episode?' }, class: 'btn btn-danger', form: { data: { turbo: false } } %>
</div>
