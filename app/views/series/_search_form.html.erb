<%= stylesheet_link_tag 'cinema_series_search', media: 'all' %>
<div class="series-search-container" data-controller="series">
  <form id="series-search-form" class="series-search-form" action="<%= series_index_path %>" method="get" data-turbo-frame="series">
    <div class="search-input-row">
      <input type="text" 
             name="q" 
             class="search-input-series" 
             placeholder="🔍 Search series by title..."
             value="<%= params[:q] %>">
    </div>
    
    <div class="tags-section-series">
      <label class="tags-label-series">
        <i class="fas fa-tags me-2"></i>Genres
      </label>
      <div class="tags-container-series" data-series-target="tagSelect">
        <% selected_tags = params[:tags] || [] %>
        <% Tag.all.each do |tag| %>
          <span class="tag-option-series <%= 'selected' if selected_tags.include?(tag.name) %>" 
                data-tag="<%= tag.name %>">
            <%= tag.name %>
          </span>
        <% end %>
      </div>
      <input type="hidden" 
             name="tags[]" 
             data-series-target="selectedTags" 
             value="<%= selected_tags.join(',') %>">
    </div>
    
    <div class="search-input-row">
      <button type="submit" class="search-button-series">
        <i class="fas fa-search me-2"></i>
        Search Series
      </button>
    </div>
  </form>
</div>
