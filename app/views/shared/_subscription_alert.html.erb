<% if user_signed_in? && current_user.pro? %>
  <% begin %>
    <% subscription_info = controller.send(:get_user_subscription_info, current_user) %>
    <% if subscription_info&.dig(:cancel_at_period_end) %>
      <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <i class="fas fa-exclamation-triangle text-yellow-500 fa-lg"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm text-yellow-700">
              <strong>Subscription Ending:</strong>
              Your Pro subscription will end on
              <% if subscription_info[:current_period_end].present? %>
                <span class="font-semibold text-yellow-800"><%= subscription_info[:current_period_end].strftime('%B %d, %Y') %></span>.
              <% else %>
                <span class="font-semibold text-yellow-800">N/A</span>.
              <% end %>
            </p>
            <% if subscription_info[:cancelled_at].present? %>
              <p class="text-xs text-yellow-600 mt-1">
                Cancelled on <%= subscription_info[:cancelled_at].strftime('%B %d, %Y at %I:%M %p') %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% rescue => e %>
    <!-- Silently fail if subscription info can't be retrieved -->
    <%= Rails.logger.debug "Subscription info retrieval failed: #{e.message}" if Rails.env.development? %>
  <% end %>
<% end %>
