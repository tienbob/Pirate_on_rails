<style>
  body.bg-user-index {
    background: linear-gradient(135deg, #232526 0%, #414345 100%);
    min-height: 100vh;
  }
</style>
<script>
  document.body.classList.add('bg-user-index');
</script>

<div class="container py-5">
  <h1 class="text-center text-white mb-5">User Management</h1>
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card border-0 shadow-lg rounded-4">
        <div class="card-body p-4">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td class="fw-bold"><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td>
                    <% if user.admin? %>
                      <span class="badge bg-gradient text-white">Admin</span>
                    <% elsif user.pro? %>
                      <span class="badge bg-primary">Pro</span>
                    <% else %>
                      <span class="badge bg-success">Free</span>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to 'View', user_path(user), class: 'btn btn-sm btn-gradient' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .bg-gradient {
    background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);
    color: #fff;
  }
</style>
