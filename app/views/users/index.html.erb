
<%= stylesheet_link_tag 'cinema_users', media: 'all' %>

<div class="container py-5">
  <h1 class="users-page-header">User Management</h1>
  
  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="users-table-container">
        <div class="p-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 style="color: #f1f5f9; font-family: 'Inter', sans-serif; margin: 0;">
              <i class="fas fa-users me-2"></i>
              All Users (<%= @total_users %>)
            </h3>
            <div class="d-flex gap-2">
              <span class="role-badge admin">
                <i class="fas fa-crown me-1"></i>
                <%= @admin_count %> Admins
              </span>
              <span class="role-badge pro">
                <i class="fas fa-star me-1"></i>
                <%= @pro_count %> Pro
              </span>
              <span class="role-badge free">
                <i class="fas fa-user me-1"></i>
                <%= @free_count %> Free
              </span>
            </div>
          </div>
          
          <div class="table-responsive">
            <table class="table users-table align-middle mb-0">
              <thead>
                <tr>
                  <th>
                    <i class="fas fa-user me-2"></i>User
                  </th>
                  <th>
                    <i class="fas fa-envelope me-2"></i>Email
                  </th>
                  <th>
                    <i class="fas fa-user-tag me-2"></i>Role
                  </th>
                  <th>
                    <i class="fas fa-clock me-2"></i>Last Seen
                  </th>
                  <th>
                    <i class="fas fa-cogs me-2"></i>Actions
                  </th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td>
                      <div class="d-flex align-items-center">
                        <div class="user-avatar me-3" style="width: 40px; height: 40px; font-size: 1rem;">
                          <%= user.name.present? ? user.name.first.upcase : 'U' %>
                        </div>
                        <div>
                          <div class="user-name-cell"><%= user.name %></div>
                          <small style="color: #94a3b8;">ID: <%= user.id %></small>
                        </div>
                      </div>
                    </td>
                    <td style="color: #cbd5e1;"><%= user.email %></td>
                    <td>
                      <% if user.admin? %>
                        <span class="role-badge admin">
                          <i class="fas fa-crown me-1"></i>Admin
                        </span>
                      <% elsif user.pro? %>
                        <span class="role-badge pro">
                          <i class="fas fa-star me-1"></i>Pro
                        </span>
                      <% else %>
                        <span class="role-badge free">
                          <i class="fas fa-user me-1"></i>Free
                        </span>
                      <% end %>
                    </td>
                    <td style="color: #94a3b8;">
                      <% if user.last_seen_at %>
                        <i class="fas fa-circle text-success me-1" style="font-size: 0.5rem;"></i>
                        <%= time_ago_in_words(user.last_seen_at) %> ago
                      <% else %>
                        <i class="fas fa-circle text-muted me-1" style="font-size: 0.5rem;"></i>
                        Never
                      <% end %>
                    </td>
                    <td>
                      <%= link_to user_path(user), class: 'user-action-btn primary btn-sm' do %>
                        <i class="fas fa-eye me-1"></i>View
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      
      <% if @users.respond_to?(:current_page) %>
        <div class="d-flex justify-content-center mt-4">
          <%= paginate @users %>
        </div>
      <% end %>
    </div>
  </div>
</div>
