
<%= stylesheet_link_tag 'cinema_users', media: 'all' %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="user-profile-card p-5">
        <div class="text-center">
          <div class="user-avatar">
            <% if @user.name.present? %>
              <%= @user.name.first.upcase %>
            <% else %>
              <i class="fas fa-user"></i>
            <% end %>
          </div>
          
          <h2 class="user-name"><%= @user.name %></h2>
          <p class="user-email"><%= @user.email %></p>
          
          <div class="mb-4">
            <% if @user.admin? %>
              <span class="role-badge admin">
                <i class="fas fa-crown me-2"></i>Admin
              </span>
            <% elsif @user.pro? %>
              <span class="role-badge pro">
                <i class="fas fa-star me-2"></i>Pro
              </span>
            <% else %>
              <span class="role-badge free">
                <i class="fas fa-user me-2"></i>Free
              </span>
            <% end %>
          </div>
          
          <% if @user.last_seen_at %>
            <p class="user-email">
              <i class="fas fa-clock me-2"></i>
              Last seen <%= time_ago_in_words(@user.last_seen_at) %> ago
            </p>
          <% end %>
        </div>
        
        <div class="mt-4 text-center">
          <% if current_user.admin? %>
            <%= link_to users_path, class: 'user-action-btn secondary' do %>
              <i class="fas fa-arrow-left me-2"></i>Back to Users
            <% end %>
            <% unless @user.admin? %>
              <%= link_to edit_user_path(@user), class: 'user-action-btn warning' do %>
                <i class="fas fa-edit me-2"></i>Edit
              <% end %>
              <%= link_to user_path(@user), method: :delete, 
                  data: { 
                    confirm: 'Are you sure you want to delete this user?',
                    turbo_method: :delete 
                  }, 
                  class: 'user-action-btn danger' do %>
                <i class="fas fa-trash me-2"></i>Delete
              <% end %>
            <% end %>
          <% elsif current_user == @user %>
            <%= link_to edit_user_path(@user), class: 'user-action-btn primary' do %>
              <i class="fas fa-user-edit me-2"></i>Edit Profile
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

