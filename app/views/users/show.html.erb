
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card border-0 shadow-lg rounded-4">
        <div class="card-body p-5">
          <div class="text-center mb-4">
            <img src="/icon.png" alt="User" width="64" height="64" class="mb-2">
            <h2 class="fw-bold mb-1 text-white"><%= @user.name %></h2>
            <p class="text-muted mb-2"><%= @user.email %></p>
            <% if @user.admin? %>
              <span class="badge px-3 py-2 rounded-pill">Admin</span>
            <% elsif @user.pro? %>
              <span class="badge bg-primary px-3 py-2 rounded-pill">Pro</span>
            <% else %>
              <span class="badge bg-success px-3 py-2 rounded-pill">Free</span>
            <% end %>
          </div>
          <div class="mt-4 text-center">
            <%= link_to 'Back to Users', users_path, class: 'btn btn-outline-light' %>
            <% if current_user.admin? && !@user.admin? %>
              <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-warning ms-2' %>
              <%= link_to 'Delete', user_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'btn btn-danger ms-2' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

